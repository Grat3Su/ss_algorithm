package BOJ;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Arrays;
import java.util.StringTokenizer;

public class BOJ_10819_차이최대로 {
	// 순열문제
	// 위치에 따라 다음 값이 바뀜
	// 오늘 배운거 써보고싶다... next permutation
	// 정렬 배열에 사용 가능

	static int[] numArr;
	static int N;

	public static void main(String[] args) throws IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		N = Integer.parseInt(br.readLine());
		StringTokenizer st = new StringTokenizer(br.readLine());
		numArr = new int[N];
		for (int i = 0; i < N; i++) {// 배열 저장
			numArr[i] = Integer.parseInt(st.nextToken());
		}
		Arrays.sort(numArr);// 정렬
		int result = 0;
		int add = 0;
		while (true) {
			// complete code - 순열이기 때문에
			System.out.println(Arrays.toString(numArr));
//			for(int i:numArr) {
//				add+=i;
//			}
			for (int i = 0; i < N - 1; i++) {
				add += Math.abs(numArr[i] - numArr[i + 1]);
			}
			if (add > result)
				result = add;
			add = 0;
			if (!np())
				break;
		}
		System.out.println(result);
	}

	// np
	static boolean np() {
		int i = numArr.length-1;//맨 끝 값에서 시작
		
		while(i>0&&numArr[i-1]>=numArr[i]) {//-가 양수였는데 음수가 된것같은거
			--i;
		}
		int j= numArr.length-1;
		while(numArr[i-1]>=numArr[j]) --j;
		
		if(i==0)//i가 맨 앞으로 가면 끝내기
			return false;
		swap(numArr, i-1,j);//i-1과 끝에 값 바꾸기
		int k = numArr.length-1;
		while(i<k) {
			swap(numArr,i++,k--);
		}
		return true;
		
	}
//	static boolean np() {
//		// 3가지
//		// 앞에서 교환되어야 하는 인덱스&작업
//		int i = numArr.length - 1;
