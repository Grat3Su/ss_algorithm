import java.util.Scanner;

public class AreaAdd {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int a = sc.nextInt();
		int b = sc.nextInt();
		
		int[] area = new int[51];
		
		
		//50개 생성
		for(int i = 0; i<51; i++) {
			area[i] = i;//0은 더미
		}
		int sum = 0;
		for(int i = a; i<b; i++) {
			sum += i;
		}
		System.out.println(sum);

		//구간합 생성
		for(int i = 1; i<51; i++) {
			area[i] = i+area[i-1];//0은 더미
		}
		System.out.println((area[b]-area[a]));
	}
}
