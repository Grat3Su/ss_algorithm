package basic.perm;

import java.util.Arrays;

//순열 기본
//중복x
//모든 수를 대상으로 현재 자리를 채우는 경우의 수를 따지되, 이전에 사용한 수는 제외
//이전에 사용된 수 <= select
//이전에 방문한 곳 <= visit
//^ boolean 배열 사용 <= index가 수를 의미
public class Perm {
	static int[] src = {1,2,3,4,5};//해당 인덱스가 사용되었다를 bool 배열로 표현
	static int[] tgt = new int[3];// ㅡ, ㅡ, ㅡ
	static boolean[] select = new boolean[src.length];
	static int COUNT;
	
	public static void main(String[] args) {
		perm(0);
		System.out.println(COUNT);
	}
	
	//재귀 호출로 만든다
	//tgtidx에 수를 채우는 작업
	static void perm(int tgtidx) {//인덱스를 받는데 tgt에 무엇을 채울지
		if(tgtidx == tgt.length) {//컴플리트 코드. 원하는게 하나 완성이 되었다.
			System.out.println(Arrays.toString(tgt));
			System.out.println(tgtidx);
			COUNT++;
			return;//원하는 순열 완성. 출력하던가 하면 된다.			
		}
		
		//tgtidx에 놓을 수를 선택 <= scr 배열 모든 수를 대상
		for(int i = 0; i<src.length; i++)
		{
			//이전에 선택한 두 수가 아닌 나머지 수
			if(select[i]==true)		continue;//사용됨
			//아직 사용 안된 수
			tgt[tgtidx] = src[i];
			select[i] = true;
			perm(tgtidx+1);//다음 자리 고려
			select[i] = false;//현재 자리 수 원상복귀
			//모든 공정이 끝이 났기 때문에
		}
	}
}
