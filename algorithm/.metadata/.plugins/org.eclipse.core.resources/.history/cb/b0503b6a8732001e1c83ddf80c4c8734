package sw;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Stack;

import com.sun.xml.internal.ws.addressing.ProblemAction;

public class SW_1218_괄호짝짓기 {

	public static void main(String[] args) throws IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		
		int T = Integer.parseInt(br.readLine());
		
		char[][] bracket = {{'(',')'},{'{','}'},{'[',']'},{'<','>'}};
		Stack<Character> stack= new Stack<Character>();
		
		String s = br.readLine();
		char[] probelm = s.toCharArray();			
		int result = 1;
		for(int i = 0; i<T; i++) {
			if(probelm[i] == bracket[0][0]||probelm[i] == bracket[1][0]||probelm[i] == bracket[2][0]||probelm[i] == bracket[3][0]) {
				stack.add(probelm[i]);
			}
			else {
				char pop = stack.pop();
				
				for(int j = 0; j<4; j++) {
					if(	probelm[j] == bracket[j][1]) {
						if(pop != bracket[i][0]) {
							result = 0;
						}
					}
				}
			}
		}
		System.out.println(result);	
		
	}

}
